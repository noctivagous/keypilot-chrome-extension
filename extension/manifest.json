{
    "manifest_version": 3,
    "name": "KeyPilot",
    "version": "0.3.4",
    "description": "Jan-4-2026-5:42AM Keyboard-first navigation: F click link under cursor; D back; R forward; S delete mode; ESC cancel.",
    "action": {
        "default_title": "KeyPilot Minimal",
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_security_policy": {
        "extension_pages": "frame-src *; style-src 'self' 'unsafe-inline'; default-src 'self'"
    },
    "permissions": [
        "storage",
        "tabs",
        "declarativeNetRequest",
        "history",
        "bookmarks",
        "topSites",
        "favicon"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "declarative_net_request": {
        "rule_resources": [
            {
                "id": "remove_frame_restrictions",
                "enabled": true,
                "path": "rules.json"
            }
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "early-inject.js"
            ],
            "run_at": "document_start"
        },
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content-bundled.js"
            ],
            "all_frames": true,
            "match_about_blank": true,
            "run_at": "document_idle"
        }
    ],
    "chrome_url_overrides": {
        "newtab": "pages/newtab.html"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "fonts/*",
                "pages/*",
                "src/*",
                "src/config/*",
                "src/modules/*",
                "src/ui/*",
                "src/utils/*",
                "_favicon/*"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}
